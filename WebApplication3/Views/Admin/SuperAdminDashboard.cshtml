@using WebApplication3.Data
@model List<User>
@{
    ViewData["Title"] = "Super Admin Dashboard";
}

<div class="container mt-4">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <h2>Super Admin Dashboard</h2>

    <div class="mb-3">
        <a asp-action="AddAdmin" class="btn btn-primary">Add New Admin</a>
        <a asp-action="AddUser" class="btn btn-secondary">Add New User</a>
        <a asp-action="AddEmployee" class="btn btn-info">Add New Employee</a>
    </div>

    <h4>All Users</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th> 
               <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    @* <td> *@
                    @*     <form asp-action="UpdateRole" method="post"> *@
                    @*         <input type="hidden" name="userId" value="@user.Id" /> *@
                    @*         <select name="newRole" class="form-select form-select-sm" *@
                    @*                 onchange="this.form.submit()"> *@
                    @*             <option value="SuperAdmin" selected="@(user.Role == "SuperAdmin")">Super Admin</option> *@
                    @*             <option value="Admin" selected="@(user.Role == "Admin")">Admin</option> *@
                    @*             <option value="User" selected="@(user.Role == "User")">User</option> *@
                    @*         </select> *@
                    @*     </form> *@
                    @* </td> *@
                    <td>
                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                        <a asp-action="DetailUser" asp-route-id="@user.Id" class="btn btn-info btn-sm">
                            <i class="fas fa-info-circle"></i> Detail
                        </a>
                   
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>