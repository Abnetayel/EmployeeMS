@model WebApplication3.Data.User

@{
    ViewData["Title"] = "Delete user";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg p-3 mb-5 bg-white rounded">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-trash-alt"></i> @ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <p class="text-center">
                        <i class="fas fa-exclamation-triangle text-warning fa-3x mb-3"></i>
                    </p>
                    <h3 class="text-center">Are you sure you want to delete this user?</h3>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.UserName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.UserName)
                        </dd>
                        

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Role)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Role)
                        </dd>
                        
                    </dl>
                </div>
                <div class="card-footer text-muted">
                    <form asp-action="DeleteUser">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <input type="submit" value="DeleteUser" class="btn btn-danger" />
                            <a asp-action="SuperAdminDashboard" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
