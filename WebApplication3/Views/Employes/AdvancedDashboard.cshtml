@{
    ViewData["Title"] = "Advanced Employee Dashboard";
}

<div class="container py-5">
    <h1 class="mb-4">Advanced Employee Dashboard</h1>

    <div class="row">
        <!-- Total Employees -->
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Employees</h5>
                    <p class="card-text display-4">@ViewBag.TotalEmployees</p>
                </div>
            </div>
        </div>

        <!-- Top Countries -->
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Top 5 Countries by Employee Count</h5>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Country</th>
                                <th>Employee Count</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var country in ViewBag.TopCountries)
                            {
                                <tr>
                                    <td>@country.Country</td>
                                    <td>@country.Count</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Hires -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Recent Hires</h5>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Full Name</th>
                                <th>Position</th>
                                <th>Date of Registration</th>
                                <th>Country</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var hire in ViewBag.RecentHires)
                            {
                                <tr>
                                    <td>@hire.FullName</td>
                                    <td>@hire.Skills</td>
                                    <td>@hire.DateOfRegistration.ToShortDateString()</td>
                                    <td>@hire.Country</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
