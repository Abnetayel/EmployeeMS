                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Gender)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Gender)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.EmployementType)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.EmployementType)
                        </dd>

