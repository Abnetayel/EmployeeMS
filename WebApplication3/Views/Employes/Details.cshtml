                            @Html.DisplayFor(model => model.Country)
                        </dd>
                    </dl>
                </div>
                <h3>Attendance Records</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Is Present</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var attendance in Model.Attendances)
                        {
                            <tr>
                                <td>@attendance.Date.ToShortDateString()</td>
                                <td>@(attendance.IsPresent ? "Yes" : "No")</td>
                            </tr>
                        }
                    </tbody>
                </table>


                <div class="card-footer text-muted">
                    <div class="d-flex justify-content-between">
                        <a asp-action="UpdateSalary" asp-controller="Admin" asp-route-employeeId="@Model.Id" class="btn btn-primary">
                            Update Salary
                        </a>

						<a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                        <a asp-action="OnboardingTasks" asp-route-employeeId="@Model.Id" class="btn btn-info">Manage Onboarding Tasks</a>
