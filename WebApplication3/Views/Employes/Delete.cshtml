@model WebApplication3.Models.Employe

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg p-3 mb-5 bg-white rounded">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-trash-alt"></i> @ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <p class="text-center">
                        <i class="fas fa-exclamation-triangle text-warning fa-3x mb-3"></i>
                    </p>
                    <h3 class="text-center">Are you sure you want to delete this employee?</h3>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.FullName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.FullName)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Age)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Age)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Experience)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Experience)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.DateOfRegistration)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.DateOfRegistration)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Education)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Education)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Skills)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Skills)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Gender)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Gender)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.EmployementType)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.EmployementType)
                        </dd>

                        <!-- Salary Information -->
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Salary)
                        </dt>
                        <dd class="col-sm-8">
                            @{
                                var currencySymbol = "";
                                switch (Model.Currency)
                                {
                                    case "USD":
                                        currencySymbol = "$";
                                        break;
                                    case "GBP":
                                        currencySymbol = "£";
                                        break;
                                    case "EUR":
                                        currencySymbol = "€";
                                        break;
                                    case "ETB":
                                        currencySymbol = "Br";
                                        break;
                                    case "JPY":
                                        currencySymbol = "¥";
                                        break;
                                    default:
                                        currencySymbol = Model.Currency;
                                        break;
                                }
                            }
                            @currencySymbol @Model.Salary.ToString("N2")
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Currency)
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary">
                                @Html.DisplayFor(model => model.Currency)
                            </span>
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-muted">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>